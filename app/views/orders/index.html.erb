<div class="container mt-5">
  <h3>Pedidos de <%= current_user.name%></h3>
  <hr>
  <div class="row mt-2">
    <div class="col">
      <% @orders.sort.each_with_index do |order, i| %>
        <p>
          <strong>Pedido nº </strong> <span Style="color:darkred"><%= "#{i + 1}" %></span>
          <% if order.aberta? %>
            <%= link_to 'Concluir', conclude_order_path(order),
               data: { confirm: 'Confirma a solicitação?' }, class: "btn btn-dark" %>
            <%= link_to 'Cancelar', cancel_order_path(order),
               data: { confirm: 'Confirma o cancelamento?' }, class: "btn btn-dark" %>
          <% end %>
        </p>
        <h4>
          <strong>Nome da Base: </strong><%= order.base.name if order.items.count.positive? %></h4>
        <p><strong>Situação: </strong><%= order.status %></p>
        <p><strong>Justificativa: </strong><%= order.justify %></p>
        <p><strong>Categoria do pedido: </strong><%= order.category  %></p>
        <% order.items.each do |item| %>
          <p style="margin-left: 20px">
            <%= link_to delete_item_path(item), method: :delete, data: { confirm: 'Confirma a exclusão desse item?' } do %>
              <i class="fa fa-trash"></i>
            <% end %>
            <%=" ✔ #{item.variable.name}" %>

            </p>
        <% end %>
        <hr>
      <% end %>
    </div>
  </div>
</div>
