<div class="container mt-5">
  <h3>Pedidos de <%= current_user.name%></h3>
  <hr>
  <div class="row mt-2">
    <div class="col">
      <% @orders.sort.reverse.each do |order| %>
        <p>
          <strong>Pedido código </strong> <span Style="color:darkred">
            <% date_time = order.created_at + DateTime.now.strftime('%z').to_i/100 * 60 * 60 %>
            <%= "#{order.id} de #{date_time.strftime("%d/%m/%Y às %H:%M")}" %></span>
        </p>
        <h4>
          <strong>Nome da Base: </strong><%= order.base.name if order.items.count.positive? %></h4>
        <p><strong>Situação: </strong><%= order.status %></p>
        <p><strong>Categoria do pedido: </strong><%= order.category  %></p>
        <p>
          <strong> <%= 'Justificativa: ' unless order.pessoais? %> </strong>
          <%= order.justify unless order.pessoais? %>
        </p>
          <%= link_to 'Mostrar Pedido', order_path(order), class: "btn btn-dark" %>
          <% if order.aberta? %>
            <%= link_to 'Concluir', conclude_order_path(order),
               data: { confirm: 'Confirma a solicitação?' }, class: "btn btn-dark" %>
            <%= link_to 'Cancelar', cancel_order_path(order),
               data: { confirm: 'Confirma o cancelamento?' }, class: "btn btn-dark" %>
          <% end %>
        <hr>
      <% end %>
    </div>
  </div>
</div>
