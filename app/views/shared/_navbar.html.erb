
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon shadow-sm p-3 mb-5 bg-white rounded">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo1.png" %>
    <% end %>
    <%= link_to "Home", root_path, class: "navbar-nav mr-auto home" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.manager == true %>
        <li class="nav-item active">
          <%= link_to "Minhas bases", my_bases_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Inserir nova base", new_basis_path, class: "nav-link" %>
        </li>
          <% else %>
        <li class="nav-item active">
          <%= link_to "Meus pedidos", orders_path, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-link">
          <strong> <%= current_user.name %> </strong>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", height: 40, width: 40, crop: :fill, data: { toggle: "dropdown" } %>
          <% else %>
          <%= image_tag "avatar_blank.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", height: 40, width: 40, crop: :fill, data: { toggle: "dropdown" } %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>



