<div class="container">

  <h2 class="mt-5 text-center mb-3"><%= @base.name %></h2>

  <div class="row">

    <div class="col-sm-2">

    <%= link_to 'Voltar', :back, class: "btn btn-dark" %>
    </div>

    <div class="col-sm-8">

    </div>

    <div class="col-sm-2">

    <%= link_to 'Solicitar meus dados', create_order_path(@base), class: "btn btn-dark" %>
    </div>
  </div>
</div>

<section id="tabs" class="project-tab">
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                  <nav>
                      <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                          <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Dados pessoais</a>
                          <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Dados gerais identificados</a>
                          <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Dados gerais não identificados</a>
                      </div>
                  </nav>
                  <div class="tab-content" id="nav-tabContent">
                      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                          <table class="table" cellspacing="0">
                              <thead>
                                  <tr>
                                    <th scope="col">Variável</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Categoria</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% @base.variables.each do |variable| %>
                                  <tr <%= "class=#{variable.category}" %> >
                                    <th scope="row"><%= variable.name %></th>
                                    <td><%=  variable.description %></td>
                                    <td><%=  variable.category %></td>
                                  </tr>
                                  <% end %>
                              </tbody>
                          </table>
                      </div>
                      <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                          <table class="table" cellspacing="0">
                              <thead>
                                  <tr>
                                    <th scope="col">Variável</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Categoria</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% @base.variables.each do |variable| %>
                                  <tr <%= "class=#{variable.category}" %> >
                                    <th scope="row"><%= variable.name %></th>
                                    <td><%=  variable.description %></td>
                                    <td><%=  variable.category %></td>
                                  </tr>
                                  <% end %>
                              </tbody>
                          </table>
                      </div>
                      <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                          <table class="table" cellspacing="0">
                              <thead>
                                <tr>
                                  <th scope="col">Variável</th>
                                  <th scope="col">Descrição</th>
                                  <th scope="col">Categoria</th>
                                </tr>
                              </thead>
                              <tbody>
                                  <% @base.variables.each do |variable| %>
                                  <% if variable.category == "não cadastral" %>
                                  <tr <%= "class=#{variable.category}" %> >
                                    <th scope="row"><%= variable.name %></th>
                                    <td><%=  variable.description %></td>
                                    <td><%=  variable.category %></td>
                                  </tr>
                                  <% end %>
                                  <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>
</section>
